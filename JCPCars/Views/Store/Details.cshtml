@model JCPCars.Models.Car
@using JCPCars.Infrastructure
@{
    ViewBag.Title = Model.CarBrand + " " + Model.CarModel;
}
<head>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("#datepicker").datepicker();
        });
    </script>
</head>
<body>
    <main class="mt-5 pt-4" style="padding-bottom:100px">
        <div class="container dark-grey-text mt-5">
            <div class="row wow fadeIn">
                <div class="col-md-6 mb-4">
                    <img src="@Url.CarIconPath(Model.PictureFileName)" class="img-fluid" alt="">
                </div>

                <div class="col-md-6 mb-4">
                    <div class="p-4">
                        <p class="lead font-weight-bold">@Model.CarBrand @Model.CarModel</p>

                        <div class="mb-3">
                            <a href="">
                                <span class="badge blue mr-1">@Model.Serie.Name</span>x`
                            </a>

                            @if (Model.IsHighlited)
                            {
                                <a href="">
                                    <span class="badge red mr-1">OGŁOSZENIE PROMOWANE</span>
                                </a>
                            }

                        </div>

                        <p class="lead">
                            @*<span class="mr-1">
                                    <del>$200</del>
                                </span>*@
                            <span>@String.Format("{0:0.##}", Model.PricePer1h)PLN /1h</span><br />
                            <span>@String.Format("{0:0.##}", Model.PricePer24h)PLN /24h</span><br />
                            <span>@String.Format("{0:0.##}", Model.PricePer1m)PLN /miesiąc</span><br />


                        </p>

                        <b>@Html.LabelFor(o => o.Fuel):</b> @Model.Fuel<br />
                        <b>@Html.LabelFor(o => o.Gearbox):</b> @Model.Gearbox<br />
                        <b>@Html.LabelFor(o => o.ProductionYear):</b> @Model.ProductionYear<br />
                        <b>@Html.LabelFor(o => o.Power):</b> @Model.Power<br />
                        <b>@Html.LabelFor(o => o.Location):</b> @Model.Location<br />

                        <hr />
                        @*<div>
                                <form class="d-flex justify-content-left" action="@Url.Action("AddToCart", "Cart", new { id = Model.CarId })">
                                    <button class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" type="submit">
                                        <i class="material-icons">shopping_cart</i>
                                        Zamów pojazd
                                    </button>
                                </form>
                            </div>*@

                        <div style="margin-top:80px">
                            <a class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored" href="@Url.Action("Index", "Message", new { id = Model.CarId })">
                                <i class="material-icons">chat</i>
                                Skontaktuj się ze sprzedawcą
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <hr />
            <div class="row d-flex justify-content-center">
                <div class="col-md-6 text-center">
                    <h4 class="my-4 h4">Opis produktu</h4>
                    <p>
                        @Model.Description
                    </p>
                    <hr />

                </div>
            </div>
            <div class="row wow fadeIn">

                <div class="col-lg-4 col-md-12 mb-4">
                    <img src="@Url.CarIconPath(Model.PictureFileName)" class="img-fluid" alt="">
                </div>
                @if (Model.PictureFileName2 != null)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img src="@Url.CarIconPath(Model.PictureFileName2)" class="img-fluid" alt="">
                    </div>
                }
                @if (Model.PictureFileName3 != null)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <img src="@Url.CarIconPath(Model.PictureFileName3)" class="img-fluid" alt="">
                    </div>
                }

            </div>
        </div>
    </main>

    <script type="text/javascript" src="~/Content/js/popper.min.js"></script>
</body>
