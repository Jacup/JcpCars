@model  JCPCars.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .demo-card-wide.mdl-card {
        width: 512px;
    }


    .demo-card-wide > .mdl-card__menu {
        color: #fff;
    }
</style>




<div class="android-customized-section" style="padding-bottom:100px; width:auto">
    <div class="android-customized-section-text" style="width:512px">
        <div class="mdl-typography--font-light mdl-typography--display-1-color-contrast" style="padding-bottom:50px; width:512px">Zaloguj się</div>


        <div class="demo-card-wide mdl-card mdl-shadow--2dp">

            @using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div id="login-error">
                    @Html.ValidationMessage("loginerror", "")
                </div>


                <div class="mdl-card__supporting-text" style="width:auto">
                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.TextBoxFor(o => o.Email, new { @class = "mdl-textfield__input" })
                        <label class="mdl-textfield__label" for="sample3">@Html.LabelFor(o => o.Email, "E-mail:")</label>
                        @Html.ValidationMessageFor(o => o.Email)

                    </div>



                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                        @Html.PasswordFor(o => o.Password, new { @class = "mdl-textfield__input" })
                        <label class="mdl-textfield__label" for="Password">@Html.LabelFor(o => o.Password, "Hasło")</label>
                        @Html.ValidationMessageFor(o => o.Password)
                    </div>

                </div>
                <div class="mdl-card__actions">
                    <input type="submit" value="Zaloguj się" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect" />
                </div>


            }



        <div class="mdl-card__actions mdl-card--border">
            <div class="mdl-card__supporting-text" style="width:auto">
                Zaloguj przez:
            </div>

            @using (Html.BeginForm("ExternalLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }))
            {
                @Html.AntiForgeryToken()

                <button type="submit" id="FacebookLoginButton" name="provider" value="Facebook" style="border:hidden; background-color:#fff">
                    <img src="@Url.Content("~/Content/Images/fb-login.png")" style="width:200px"/>
                </button>

                <button type="submit" id="GoogleLoginButton" name="provider" value="Google" style="border:hidden; background-color:#fff">
                    <img src="@Url.Content("~/Content/Images/google-login.png")"style="width:200px" />
                </button>
            }





        </div>
            <div class="mdl-card__actions mdl-card--border">
                <div class="mdl-card__supporting-text" style="width:auto">
                    Jeśli nie masz jeszcze u nas konta, możesz je teraz założyć. Rejestracja jest bezpłatna.
                </div>
                <a href="@Url.Action("Register")" class="mdl-button mdl-button--colored mdl-js-button mdl-js-ripple-effect">
                    Stwórz nowe konto       
                </a>
            </div>
        </div>




    </div>
</div>



@section ScriptsBottom
{
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
}